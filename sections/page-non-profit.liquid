<div class="centered-page-wrapper">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'title-section' %}
        {% include 'non-profit-title' block %}
      {% when 'description' %}
        {% include 'non-profit-description' block %}
      {% when 'dual-image-banner' %}
        {% include 'dual-image-banner' block %}
      {% when 'non-profit-video' %}
        {% include 'non-profit-video' block %}
      {% when 'contacts' %}
        {% include 'non-profit-contacts' block %}
      {% when 'previous-org-title' %}
        {% include 'non-profit-previous-org-title' block %}
      {% when 'partner-section' %}
        {% include 'partner-section' block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Non Profit Page",
    "blocks": [
      {
        "name": "Title Section",
        "type": "title-section",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "name": "Description",
        "type": "description",
        "settings": [
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      },
      {
        "name": "Dual Image Banner",
        "type": "dual-image-banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image",
            "info": "Recommended size 127x127"
          },
          {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image",
            "info": "Recommended size 127x127"
          }
        ]
      },
      {
        "name": "Video",
        "type": "non-profit-video",
        "settings": [
          {
            "type": "url",
            "id": "video_url",
            "label": "Video Url"
          }
        ]
      },
      {
        "name": "Contacts",
        "type": "contacts",
        "settings": [
          {
            "type": "image_picker",
            "id": "contact_image",
            "label": "Contact Image",
            "info": "Recommended size 130x130"
          },
          {
            "type": "url",
            "id": "website",
            "label": "Website"
          },
          {
            "type": "text",
            "id": "email",
            "label": "Email"
          },
          {
            "type": "url",
            "id": "instagram",
            "label": "Instagram link"
          },
          {
            "type": "url",
            "id": "facebook",
            "label": "Facebook link"
          },
          {
            "type": "url",
            "id": "pinterest",
            "label": "Pinterest link"
          }
        ]
      },
      {
        "name": "Previous Org Title",
        "type": "previous-org-title",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      },
      {
        "name": "Partner Section",
        "type": "partner-section",
        "settings": [
          {
            "type": "image_picker",
            "id": "partner_image",
            "label": "Partner Image",
            "info": "Recommended size 230x230"
          },
          {
            "type": "text",
            "id": "partner_title",
            "label": "Partner Title"
          },
          {
            "type": "url",
            "id": "website",
            "label": "Website"
          },
          {
            "type": "text",
            "id": "email",
            "label": "Email"
          },
          {
            "type": "url",
            "id": "instagram",
            "label": "Instagram link"
          },
          {
            "type": "url",
            "id": "facebook",
            "label": "Facebook link"
          },
          {
            "type": "url",
            "id": "pinterest",
            "label": "Pinterest link"
          },
          {
            "type": "text",
            "id": "info_title",
            "label": "Title Info"
          },
          {
            "type": "text",
            "id": "info_collection",
            "label": "Collection Info "
          },
          {
            "type": "text",
            "id": "info_hours",
            "label": "Hours Info "
          },
          {
            "type": "text",
            "id": "info_units",
            "label": "Units Info "
          },
          {
            "type": "textarea",
            "id": "info_description",
            "label": "Description"
          }
        ]
      }
    ]
  }
{% endschema %}