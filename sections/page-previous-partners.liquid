<div class="centered-page-wrapper">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'partner-section' %}
        {% include 'partner-section' block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Previous Partners Page",
    "blocks": [
      {
        "name": "Partner Section",
        "type": "partner-section",
        "settings": [
          {
            "type": "image_picker",
            "id": "partner_image",
            "label": "Partner Image",
            "info": "Recommended size 230x230"
          },
          {
            "type": "text",
            "id": "partner_title",
            "label": "Partner Title"
          },
          {
            "type": "url",
            "id": "website",
            "label": "Website"
          },
          {
            "type": "text",
            "id": "email",
            "label": "Email"
          },
          {
            "type": "url",
            "id": "instagram",
            "label": "Instagram link"
          },
          {
            "type": "url",
            "id": "facebook",
            "label": "Facebook link"
          },
          {
            "type": "url",
            "id": "pinterest",
            "label": "Pinterest link"
          },
          {
            "type": "text",
            "id": "info_title",
            "label": "Title Info"
          },
          {
            "type": "text",
            "id": "info_collection",
            "label": "Collection Info "
          },
          {
            "type": "text",
            "id": "info_hours",
            "label": "Hours Info "
          },
          {
            "type": "text",
            "id": "info_units",
            "label": "Units Info "
          },
          {
            "type": "textarea",
            "id": "info_description",
            "label": "Description"
          }
        ]
      }
    ]
  }
{% endschema %}