{% paginate customer.orders by 20 %}
<div class="page-width page-content">
  <header class="section-header{% unless settings.type_headers_align_text %} section-header--with-link{% endunless %}">
    <h1 class="section-header__title">{{ 'customer.account.title' | t }}</h1>
    <a href="{{ routes.account_logout_url }}" class="btn btn--secondary btn--small section-header__link">{{ 'layout.customer.log_out'| t }}</a>
  </header>

  <div class="grid">
    <div class="grid__item medium-up--two-thirds">
      <h2>{{ 'customer.orders.title' | t }}</h2>

      {% if customer.orders.size != 0 %}

        <table class="table--responsive table--small-text">
          <thead>
            <tr>
              <th>{{ 'customer.orders.order_number' | t }}</th>
              <th>{{ 'customer.orders.date' | t }}</th>
              <th>{{ 'customer.orders.payment_status' | t }}</th>
              <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
              <th>{{ 'customer.orders.total' | t }}</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
              <tr class="table__section">
                <td data-label="{{ 'customer.orders.order_number' | t }}">{{ order.name | link_to: order.customer_url }}</td>
                <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | time_tag: format: 'date' }}</td>
                <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <hr class="hr--clear">

      {% else %}

        <p>{{ 'customer.orders.none' | t }}</p>

      {% endif %}
      <h2>Total donation</h2>
      {% assign total_spent = 0 %}
       {% for order in customer.orders %}
          {%- assign total_spent = total_spent | plus: order.subtotal_price -%}
        {% endfor %}
       <h3 class="account-donations-total js-account-donations-total"
       data-total-spent="{{total_spent | money}}"></h3>
        <p></p>
       <p class="account-donations-total__text">Total donation amount from purchases through A Labor of Love</p>
    </div>

    <div class="grid__item medium-up--one-third">
      <h3>{{ 'customer.account.details' | t }}</h3>

      <p class="h5">{{ customer.name }}</p>

      {{ customer.default_address | format_address }}

      <p><a href="{{ routes.account_addresses_url }}" class="text-link">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a></p>
      <h3 class="account__profile-section-title">My Profile</h3>
      <ul class="customers-sizes">
        <li class="customers-sizes__item">Tops: <span class="customers-sizes__size-indicator">{{ customer.metafields.customer_sizes.tops }}</span></li>
        <li class="customers-sizes__item">Pants: <span class="customers-sizes__size-indicator">{{ customer.metafields.customer_sizes.pants }}</span></li>
        <li class="customers-sizes__item">Dresses: <span class="customers-sizes__size-indicator">{{ customer.metafields.customer_sizes.dresses }}</span></li>
        <li class="customers-sizes__item">Shoes: <span class="customers-sizes__size-indicator">{{ customer.metafields.customer_sizes.shoes }}</span></li>
      </ul>
      <p>Birthday: {{customer.metafields.customer-info.birthday | date: "%m/%d"}}</p>
      <p><a href="/pages/my-profile" class="text-link">Edit profile</a></p>
    </div>

  </div>

  {% if paginate.pages > 1 %}
    {% render 'pagination', paginate: paginate %}
  {% endif %}
</div>
{% endpaginate %}
